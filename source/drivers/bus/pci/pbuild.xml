<build default="all">
    <array name="files">
        <item>pci.c</item>
        <item>devices.c</item>
    </array>

    <target name="clean">
        <delete>objs/*</delete>
        <rmdir>objs</rmdir>
    </target>

    <target name="prepare" type="private">
        <mkdir>objs</mkdir>
    </target>

    <target name="compile">
        <call target="prepare"/>

        <echo>Compiling PCI busmanager</echo>
        <echo></echo>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/drivers/bus/pci/${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <include>../../../kernel/include</include>
                <flag>-c</flag>
                <flag>-O2</flag>
                <flag>-m32</flag>
                <flag>-Wall</flag>
                <flag>-Wshadow</flag>
                <flag>-nostdinc</flag>
                <flag>-nostdlib</flag>
                <flag>-fno-builtin</flag>
                <flag>-fPIC</flag>
            </gcc>
        </for>

        <echo></echo>
        <echo>Linking PCI busmanager</echo>
        <echo></echo>
        <echo>[GCC    ] source/drivers/bus/pci/objs/pci</echo>

        <gcc>
            <input>objs/*.o</input>
            <output>objs/pci</output>
            <flag>-m32</flag>
            <flag>-shared</flag>
            <flag>-nostartfiles</flag>
            <flag>-nodefaultlibs</flag>
        </gcc>
    </target>

    <target name="install">
        <copy from="objs/pci" to="../../../../build/image/system/module/bus/pci"/>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="compile"/>
        <call target="install"/>
    </target>
</build>
