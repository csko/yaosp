+    </array>
+
+    <array name="headers_to_install">
+        <item>png.h</item>
+        <item>pngconf.h</item>
+    </array>
+
+    <target name="clean">
+        <delete>objs/*</delete>
+        <rmdir>objs</rmdir>
+    </target>
+
