<build default="all">
    <target name="clean">
        <cleandir>Python-2.5.4</cleandir>
        <rmdir>Python-2.5.4</rmdir>
    </target>

    <target name="get_source">
        <httpget address="http://files.yaosp.org/source/python/Python-2.5.4.tar.bz2"
                 to="python-2.5.4.tar.bz2"
                 md5="394a5f56a5ce811fb0f023197ec0833e"/>

        <echo>Extracting python source</echo>

        <exec executable="tar">
            <arg>-jxf</arg>
            <arg>python-2.5.4.tar.bz2</arg>
        </exec>

        <echo>Patching python source</echo>

        <exec executable="patch">
            <arg>-t</arg>
            <arg>-p0</arg>
            <arg>-i</arg>
            <arg>python-2.5.4.patch</arg>
        </exec>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="get_source"/>
        <call target="all" directory="Python-2.5.4"/>
    </target>
</build>
