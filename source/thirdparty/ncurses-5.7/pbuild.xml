<build default="all">
    <target name="clean">
        <cleandir>ncurses-5.7</cleandir>
        <rmdir>ncurses-5.7</rmdir>
    </target>

    <target name="get_source">
        <httpget address="http://files.yaosp.org/source/ncurses/ncurses-5.7.tar.gz"
                 to="ncurses-5.7.tar.gz"
                 md5="cce05daf61a64501ef6cd8da1f727ec6"/>

        <echo>Extracting ncurses source</echo>

        <exec executable="tar">
            <arg>-zxf</arg>
            <arg>ncurses-5.7.tar.gz</arg>
        </exec>

        <echo>Patching ncurses source</echo>

        <exec executable="patch">
            <arg>-t</arg>
            <arg>-p0</arg>
            <arg>-i</arg>
            <arg>ncurses-5.7.patch</arg>
        </exec>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="get_source"/>
        <call target="all" directory="ncurses-5.7"/>
    </target>
</build>
