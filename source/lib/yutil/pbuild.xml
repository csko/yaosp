<build default="all">
    <array name="files">
        <item>src/hashtable.c</item>
        <item>src/array.c</item>
        <item>src/string.c</item>
        <item>src/stack.c</item>
        <item>src/list.c</item>
        <item>src/blockbuffer.c</item>
    </array>

    <target name="clean">
        <delete>objs/*</delete>
        <rmdir>objs</rmdir>
    </target>

    <target name="prepare" type="private">
        <mkdir>objs</mkdir>
    </target>

    <target name="compile">
        <call target="prepare"/>

        <echo></echo>
        <echo>Compiling yutil library</echo>
        <echo></echo>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/lib/yutil/${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <include>../../include</include>
                <include>../../../build/crosscompiler/lib/gcc/i686-pc-yaosp/4.3.3/include</include>
                <flag>-c</flag>
                <flag>-O2</flag>
                <flag>-m32</flag>
                <flag>-Wall</flag>
                <flag>-nostdinc</flag>
                <flag>-nostdlib</flag>
                <flag>-fno-builtin</flag>
            </gcc>
        </for>

        <echo></echo>
        <echo>Linking yutil library</echo>
        <echo></echo>
        <echo>[AR     ] source/lib/yutil/objs/libyutil.a</echo>

        <exec executable="ar">
            <arg>-rc</arg>
            <arg>objs/libyutil.a</arg>
            <arg>objs/*.o</arg>
        </exec>
    </target>

    <target name="install">
    </target>

    <target name="test">
        <call target="test" directory="tst"/>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="compile"/>
        <call target="install"/>
        <call target="test"/>
    </target>
</build>
