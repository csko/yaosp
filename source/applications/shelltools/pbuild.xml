<build>
    <array name="subdirs">
        <item>list</item>
        <item>stat</item>
        <item>proclist</item>
        <item>date</item>
        <item>cat</item>
        <item>mount</item>
        <item>makedir</item>
        <item>load_module</item>
        <item>ramdiskctrl</item>
        <item>touch</item>
        <item>remdir</item>
        <item>remove</item>
        <item>uptime</item>
        <item>reboot</item>
        <item>halt</item>
        <item>symlink</item>
        <item>copy</item>
        <item>unmount</item>
        <item>clear</item>
    </array>

    <target name="all">
        <for var="i" array="${subdirs}">
            <call target="all" directory="${i}"/>
        </for>
    </target>

    <target name="clean">
        <for var="i" array="${subdirs}">
            <call target="clean" directory="${i}"/>
        </for>
    </target>
</build>
